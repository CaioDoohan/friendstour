<% include ../partial/headerADM %>
<% include ../partial/menuADM %>
<%
    var hasCategory = function(categoriaid){
        for(var k=0; k < produto.categoria.length; k++){
            console.log(categoriaid);
            if( categoriaid == produto.categoria[k].id_cat ){
                return 'checked';
            }

        }
        
    }

    var hasIncludes = function(includeid){
        for(var i = 0; i < produto.inclusos.length; i++){
            if( includeid == produto.inclusos[i].id_inc ){
                return 'checked';
            }
        }
        
    }
%>
<main>
    <div class="row">
        <div class="col col-12">
            <div class="tit">
                <p><%= title %></p>
            </div>
            <div class="formlist">
                <form method="post" action="/admin/anuncios/editar/dados_alterados">
                    <div>
                        <label>
                            ID:<%=  produto.id_prod%>
                        </label>
                        <input type="hidden" name="id_prod" placeholder="Id" value="<%=  produto.id_prod%>" />
                    </div>
                    <div>
                        <label>
                            Nome
                        </label>
                        <input type="text"  name="nome_prod" placeholder="Nome" value="<%=  produto.nome_prod%>" required/>
                    </div>
                    <div class="check">
                        <label>
                            Categoria
                        </label>
                        <div>
                            <% for(var i = 0; i < categoria.length; i++) { %>
                                <div>
                                    <input type="checkbox" name="categoria" value="<%=  categoria[i].id_cat%>" <%=hasCategory(categoria[i].id_cat)%>/>
                                    <p><%=  categoria[i].id_cat%> - <%=  categoria[i].nome_cat%></p>
                                </div>
                            <% } %>
                        </div>
                    </div>
                    <div class="txt">
                        <label>
                            Pequena Descrição
                        </label>
                        <div>
                            <textarea name="desc_prod" placeholder="Descrição breve" value="<%= produto.desc_prod%>" required>
                                <%= produto.desc_prod%>
                            </textarea>
                        </div>
                    </div> 
                    <div>
                        <label>
                            Data - Horário (ISO)
                        </label>
                        <input type="text"  name="data_prod" class="dataISO" value="<%= produto.data_prod%>"required/>
                    </div>
                    <div class="check">
                        <label>
                            O Anúncio é internacional ?
                        </label>
                        <div class="int">
                            <% if( produto.nacional_prod == true) {%>
                                <input type="checkbox" name="nacional_prod" value="<%= produto.nacional_prod%>" checked>  
                            <% } 
                              else { %>
                                <input type="checkbox" name="nacional_prod" value="<%= produto.nacional_prod%>">  
                            <% } %>
                            <p>Sim</p>
                        </div>
                    </div> 
                    <div>
                        <label>
                            Valor
                        </label>
                        <input type="text" name="valor_prod" placeholder="R$" value="<%=  produto.valor_prod%>" required/>
                    </div> 
                    <div class="check">
                        <label>
                            Inclusos
                        </label>
                        <% for(var i = 0; i < inclusos.length; i++) { %>

                            <input type="checkbox" name="incluso" value="<%= inclusos[i].id_inc %>" <%=hasIncludes(inclusos[i].id_inc)%> />
                            <p><%= inclusos[i].nome_inc %></p>

                        <% } %>
                    </div>
                    <div>
                        <label>
                            Quantidade de parcelas
                        </label>
                        <input type="text" name="parcelas_prod" placeholder="Quantidade de parcelas" value="<%=  produto.parcelas_prod%>" required/>
                    </div> 
                    <div class="check">
                        <label>
                            Últimas Vagas
                        </label>
                        <div class="int">
                            <% if( produto.vagas_prod == true) { %>
                                <input type="checkbox" name="vagas_prod" value="<%=  produto.vagas_prod%>" checked/>
                            <% } 
                                else { %>
                                <input type="checkbox" name="vagas_prod" value="<%=  produto.vagas_prod%>">  
                            <% } %>
                            <p>Sim</p>
                        </div>
                    </div>   
                    <div class="txt">
                        <label>
                            Detalhes
                        </label>
                        <div>
                            <textarea name="texto_prod" placeholder="Detalhes" value="<%=  produto.texto_prod%>" required>
                               <%=  produto.texto_prod%>
                            </textarea>
                        </div>
                    </div>  
                    <div class="add">
                        <button type="submit" value="enviar" >Enviar</button>               
                    </div>
                </form>
            </div>
        </div>
    </div> 
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.13/jquery.mask.min.js"></script> 
    <script>
        $(document).ready(function(){
            $('.dataISO').mask('0000/00/00  00:00:00');
        });
    </script>
</main>
<% include ../partial/footerADM %>