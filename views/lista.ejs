                                  <% break; 
                                    case 'Cruzeiro' :%>                   
                                      <li class="cruzeiro">
                                        <i class="fas fa-ship"></i>
                                        <h4>Cruzeiro</h4>
                                      </li> 
                                  <% break;
                                    case 'Excursão' :%>                   
                                      <li class="package">
                                        <i class="fa fa-tags" aria-hidden="true"></i>
                                        <h4>Excursão</h4>
                                      </li>
                                  <% break;
                                    case 'Transporte' :%>                   
                                      <li class="transp">
                                        <i class="fa fa-bus" aria-hidden="true"></i>
                                        <h4>Transporte</h4>
                                      </li>
                                  <% break; 
                                    } %>
                            <% } %>
                          </ul>
                          <div class="name">
                            <h5><%= produto[i].nome_prod %></h5>
                          </div>
                          <div class="desc">
                            <p><%= produto[i].desc_prod %></p>
                          </div>
                          <ul class="tempo">
                            <li>
                              <h5>Horário:</h5>
